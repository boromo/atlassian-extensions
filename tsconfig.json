{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2015", "es2018"],
    "importHelpers": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "sourceMap": true
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx", "src/**/node_modules", "src/**/lib"]
}
