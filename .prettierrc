{
  "singleQuote": true,
  "printWidth": 120,
  "overrides": [
    {
      "files": "**/*.ts",
      "options": {
        "parser": "typescript",
        "singleQuote": true,
        "endOfLine": "auto"
      }
    },
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html",
        "**/*.hbs"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}